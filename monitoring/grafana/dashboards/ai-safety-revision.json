{
  "title": "AI Safety - Revision Assistant",
  "uid": "ai-safety-revision",
  "version": 1,
  "schemaVersion": 38,
  "editable": true,
  "tags": ["ai", "assistant", "pricing"],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "API Request Latency (p95)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(admin_pricing_revision_request_latency_seconds_bucket[5m])) by (le))",
          "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
          "legendFormat": "API p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Worker Generation Latency (p95)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(admin_pricing_revision_latency_seconds_bucket[5m])) by (le))",
          "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
          "legendFormat": "Worker p95"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Ollama Failure Rate (5m)",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(ai_assistant_ollama_failures_total[5m]))",
          "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
          "legendFormat": "failures/min"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" }
      }
    },
    {
      "type": "stat",
      "title": "AI Request Throughput (5m)",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(admin_pricing_revision_requests_total[5m]))",
          "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
          "legendFormat": "req/min"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" }
      }
    },
    {
      "type": "stat",
      "title": "Detected Drift Events (24h)",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "expr": "increase(admin_pricing_revision_failures_total{failure_kind=\"drift\"}[24h])",
          "datasource": { "type": "prometheus", "uid": "PROMETHEUS" },
          "legendFormat": "drift"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" }
      }
    }
  ],
  "templating": {
    "list": []
  }
}
