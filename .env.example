# CNC Quote Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ==========================================
# PAYMENTS - PAYPAL CONFIGURATION
# ==========================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
# sandbox | live
PAYPAL_ENV=sandbox

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_AUDIENCE=cnc-quote-platform
ORG_INVITE_SIGNING_KEY=replace_with_random_secret
RBAC_V1=false
AUDIT_ENABLED=true

# ==========================================
# REDIS CONFIGURATION (Optional - for background jobs)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# (Stripe removed â€“ migrated to PayPal only)

# ==========================================
# ANALYTICS & MONITORING (Optional)
# ==========================================
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
POSTHOG_API_KEY=your_posthog_api_key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_api_key

# ==========================================
# APPLICATION URLs (Will be set by Render)
# ==========================================
NEXT_PUBLIC_APP_URL=https://your-app-name.onrender.com
NEXT_PUBLIC_API_URL=https://your-api-name.onrender.com
CAD_SERVICE_URL=https://your-cad-name.onrender.com

# ==========================================
# NODE ENVIRONMENT
# ==========================================
NODE_ENV=production
NEXT_PUBLIC_NODE_ENV=production
