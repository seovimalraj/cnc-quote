{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Price Quote Response Example",
  "description": "Example response for instant pricing with tax breakdown",
  "type": "object",
  "required": ["quoteId", "subtotal", "tax", "total", "currency"],
  "properties": {
    "quoteId": {
      "type": "string",
      "example": "quote_abc123xyz"
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal before tax and shipping",
      "example": 1200.00
    },
    "shipping": {
      "type": "number",
      "description": "Shipping cost",
      "example": 50.00
    },
    "tax": {
      "type": "number",
      "description": "Total tax amount",
      "example": 90.63
    },
    "total": {
      "type": "number",
      "description": "Grand total (subtotal + shipping + tax)",
      "example": 1340.63
    },
    "currency": {
      "type": "string",
      "example": "USD"
    },
    "taxBreakdown": {
      "type": "object",
      "properties": {
        "totalTax": {
          "type": "number",
          "example": 90.63
        },
        "jurisdiction": {
          "type": "string",
          "example": "CA, US"
        },
        "provider": {
          "type": "string",
          "example": "taxjar-stub"
        },
        "lines": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lineId": {
                "type": "string",
                "example": "L1"
              },
              "taxAmount": {
                "type": "number",
                "example": 90.63
              },
              "taxRate": {
                "type": "number",
                "example": 0.0725
              },
              "jurisdiction": {
                "type": "string",
                "example": "CA, US"
              }
            }
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "note": {
              "type": "string",
              "example": "This is a stub calculation for development only"
            },
            "stateRate": {
              "type": "number",
              "example": 0.0725
            }
          }
        }
      }
    },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lineId": {
            "type": "string",
            "example": "L1"
          },
          "quantity": {
            "type": "integer",
            "example": 10
          },
          "unitPrice": {
            "type": "number",
            "example": 120.00
          },
          "lineTotal": {
            "type": "number",
            "example": 1200.00
          }
        }
      }
    },
    "validUntil": {
      "type": "string",
      "format": "date-time",
      "example": "2025-10-09T12:00:00Z"
    },
    "requestId": {
      "type": "string",
      "example": "req_xyz789"
    },
    "traceId": {
      "type": "string",
      "example": "3a2f1e9c8b7d6e5f4a3b2c1d0e9f8a7b"
    }
  },
  "example": {
    "quoteId": "quote_abc123xyz",
    "subtotal": 1200.00,
    "shipping": 50.00,
    "tax": 90.63,
    "total": 1340.63,
    "currency": "USD",
    "taxBreakdown": {
      "totalTax": 90.63,
      "jurisdiction": "CA, US",
      "provider": "taxjar-stub",
      "lines": [
        {
          "lineId": "L1",
          "taxAmount": 90.63,
          "taxRate": 0.0725,
          "jurisdiction": "CA, US"
        }
      ],
      "metadata": {
        "note": "This is a stub calculation for development only",
        "stateRate": 0.0725
      }
    },
    "lines": [
      {
        "lineId": "L1",
        "quantity": 10,
        "unitPrice": 120.00,
        "lineTotal": 1200.00
      }
    ],
    "validUntil": "2025-10-09T12:00:00Z",
    "requestId": "req_xyz789",
    "traceId": "3a2f1e9c8b7d6e5f4a3b2c1d0e9f8a7b"
  }
}
