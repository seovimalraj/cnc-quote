{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Price Quote Request Example",
  "description": "Example request for instant pricing with tax calculation",
  "type": "object",
  "required": ["process", "material", "quantity", "shipTo"],
  "properties": {
    "process": {
      "type": "string",
      "enum": ["cnc_milling", "cnc_turning", "sheet_metal", "3d_printing"],
      "example": "cnc_milling"
    },
    "material": {
      "type": "string",
      "example": "AL_6061"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1,
      "example": 10
    },
    "shipTo": {
      "type": "object",
      "required": ["country"],
      "properties": {
        "country": {
          "type": "string",
          "example": "US"
        },
        "state": {
          "type": "string",
          "example": "CA"
        },
        "city": {
          "type": "string",
          "example": "San Francisco"
        },
        "postalCode": {
          "type": "string",
          "example": "94102"
        }
      }
    },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lineId": {
            "type": "string",
            "example": "L1"
          },
          "geometryId": {
            "type": "string",
            "example": "geom_abc123"
          },
          "quantity": {
            "type": "integer",
            "example": 10
          }
        }
      }
    },
    "customerType": {
      "type": "string",
      "enum": ["B2B", "B2C"],
      "example": "B2B"
    },
    "vatNumber": {
      "type": "string",
      "description": "VAT number for EU B2B transactions",
      "example": "DE123456789"
    },
    "calculateTax": {
      "type": "boolean",
      "default": true,
      "example": true
    }
  },
  "example": {
    "process": "cnc_milling",
    "material": "AL_6061",
    "quantity": 10,
    "shipTo": {
      "country": "US",
      "state": "CA",
      "city": "San Francisco",
      "postalCode": "94102"
    },
    "lines": [
      {
        "lineId": "L1",
        "geometryId": "geom_abc123",
        "quantity": 10
      }
    ],
    "customerType": "B2B",
    "calculateTax": true
  }
}
