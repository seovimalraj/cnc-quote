{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Public API Routes Whitelist",
  "description": "Explicit whitelist of routes and controllers to expose in public OpenAPI spec",
  "version": "1.0.0",
  "publicRoutes": [
    "/api/v1/health",
    "/api/v1/quotes/price",
    "/api/v1/quotes/{id}",
    "/api/v1/quotes/{id}/confirm",
    "/api/v1/materials",
    "/api/v1/materials/{id}",
    "/api/v1/processes",
    "/api/v1/processes/{id}",
    "/api/v1/geometry/{id}/features",
    "/api/v1/geometry/{id}/thumbnail",
    "/api/v1/uploads/presigned-url"
  ],
  "publicControllers": [
    "HealthController",
    "QuotesController",
    "MaterialsController",
    "ProcessesController",
    "GeometryController",
    "UploadsController"
  ],
  "privateRoutePrefixes": [
    "/internal",
    "/admin",
    "/queues",
    "/routing",
    "/leadtime",
    "/revisions",
    "/pricing/factors",
    "/pricing/compute",
    "/dfm",
    "/worker",
    "/audit",
    "/users",
    "/orgs"
  ],
  "strippedFields": [
    "internalId",
    "org_id",
    "debug",
    "trace",
    "internal_notes",
    "cost_breakdown",
    "margin",
    "profit"
  ],
  "securitySchemes": {
    "public": ["bearer"],
    "private": ["internalApiKey", "adminApiKey"]
  }
}
