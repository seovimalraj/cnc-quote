{
  "name": "cnc-quote",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "node apps/api/dist/main.js",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "deploy": "turbo run build && pnpm start",
    "type-check": "turbo run type-check",
    "clean:web": "cd apps/web && rm -rf .next out",
    "clean:api": "cd apps/api && rm -rf dist",
    "clean:all": "pnpm clean:web && pnpm clean:api && rm -rf node_modules && pnpm install"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^10.2.3",
    "@sentry/node": "^7.54.0",
    "@supabase/supabase-js": "^2.33.2",
    "axios": "^1.5.0",
    "bull": "^4.16.5",
    "file-type": "^21.0.0",
    "posthog-node": "^3.1.2",
    "puppeteer": "^21.1.1",
    "stripe": "^13.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.16",
    "typescript": "^5.1.6"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
